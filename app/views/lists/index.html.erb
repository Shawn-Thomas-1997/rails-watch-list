<div class="banner">
  <div class="container">
    <h1 class="header">Save any kind of movies!</h1>
  </div>
</div>

<div class="container center-content">
  <h2>My Lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="shadow-box list-box"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill%>')">
          <%= link_to list.name, list, class: "white-link"%>
        </div>
        <br>
        <%= link_to "Delete List", lists_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Add New List", new_list_path, class: "btn btn-primary mt-3 custom-button" %>
</div>
